@model UserDto

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <h2>@Localizer["YourProfile"]</h2>

    <form asp-action="UpdateProfile" method="post">
        <input type="hidden" class="form-control" name="ApplicationId" id="ApplicationId" value="@Model.ApplicationId">
        <input type="hidden" class="form-control" name="Id" id="Id" value="@Model.Id">

        <div class="form-group mb-3">
            <label for="UserName">@Localizer["Username"]</label>
            <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName" disabled />
        </div>

        <div class="form-group mb-3">
            <label for="FirstName">@Localizer["FirstName"]</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required />
        </div>

        <div class="form-group mb-3">
            <label for="LastName">@Localizer["LastName"]</label>
            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required />
        </div>

        <div class="form-group mb-3">
            <label for="Email">@Localizer["Email"]</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
        </div>

        <div class="form-group mb-3">
            <label for="PhoneNumber">@Localizer["PhoneNumber"]</label>
            <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
        </div>

        <button type="submit" class="btn btn-primary">@Localizer["UpdateProfile"]</button>
    </form>
</div>
