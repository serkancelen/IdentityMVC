@model TenantDto

@{
    ViewBag.Title = "Kiracı Oluştur";
}

<h2>@Localizer["CreateTenant"]</h2>

<form id="createTenantForm" asp-action="Create">
    <div class="form-group">
        <label for="Name">@Localizer["Name"]</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Email">@Localizer["Email"]</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="Address">@Localizer["Address"]</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>
