@model Tuple<List<CompanyDto>, List<TenantDto>>

@{
    ViewBag.Title = @Localizer["Şirketler"];
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@Localizer["Şirketler"]</h4>
                <p class="text-muted mb-0">
                    @Localizer["Bünyemizdeki Aktif Şirketler"]
                </p>
            </div>
            @if (User.HasClaim(c => c.Type == "Company" && c.Value == "CreateCompany"))
            {
                <div class="card-body">
                    <div class="button-items">
                        <a asp-action="Create" class="btn btn-secondary buttons-collection dropdown-toggle buttons-colvis">@Localizer["Yeni Şirket Ekle"]</a>
                    </div>
                </div>
            }
            <div class="card-body">
                <div id="datatable-buttons_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_length" id="datatable-buttons_length">
                                <label>
                                    @Localizer["Show"]
                                    <select name="datatable-buttons_length" aria-controls="datatable-buttons" class="form-select form-select-sm" onchange="updatePageSize(this.value)">
                                        @if (ViewBag.PageSize == 10)
                                        {
                                            <option selected value="10">10</option>
                                        }
                                        else
                                        {
                                            <option value="10">10</option>
                                        }
                                        @if (ViewBag.TotalRecords >= 20)
                                        {
                                            if (ViewBag.PageSize == 20)
                                            {
                                                <option selected value="20">20</option>
                                            }
                                            else
                                            {
                                                <option value="20">20</option>
                                            }
                                        }
                                        @if (ViewBag.TotalRecords >= 50)
                                        {
                                            if (ViewBag.PageSize == 50)
                                            {
                                                <option selected value="50">50</option>
                                            }
                                            else
                                            {
                                                <option value="50">50</option>
                                            }
                                        }
                                        @if (ViewBag.TotalRecords >= 100)
                                        {
                                            if (ViewBag.PageSize == 100)
                                            {
                                                <option selected value="100">100</option>
                                            }
                                            else
                                            {
                                                <option value="100">100</option>
                                            }
                                        }
                                    </select> @Localizer["entries"]
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Ad"]</th>
                                        <th>@Localizer["Adres"]</th>
                                        <th>@Localizer["Tenant"]</th>
                                        @if (User.HasClaim(c => c.Type == "Company" && c.Value == "EditCompany") || User.HasClaim(c => c.Type == "Company" && c.Value == "DeleteCompany"))
                                        {
                                            <th>@Localizer["İşlemler"]</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var company in Model.Item1)
                                    {
                                        <tr>
                                            <td>@company.Name</td>
                                            <td>@company.Address</td>
                                            <td>
                                                @{
                                                    var tenant = Model.Item2.FirstOrDefault(t => t.Id == company.TenantId);
                                                    string tenantName = tenant != null ? tenant.Name : "";
                                                }
                                                @tenantName
                                            </td>
                                            @if (User.HasClaim(c => c.Type == "Company" && c.Value == "EditCompany") || User.HasClaim(c => c.Type == "Company" && c.Value == "DeleteCompany"))
                                            {
                                                <td style="text-align:end">
                                                    @if (User.HasClaim(c => c.Type == "Company" && c.Value == "EditCompany"))
                                                    {
                                                        <a href="@Url.Action("Edit", "Company", new { id = company.Id })" class="las la-pen text-secondary font-16"></a>
                                                    }
                                                    @if (User.HasClaim(c => c.Type == "Company" && c.Value == "DeleteCompany"))
                                                    {
                                                        <a href="javascript:void(0);" class="las la-trash-alt text-secondary font-16" onclick="deleteCompany('@company.Id')"></a>
                                                    }
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-5">
                            <div class="dataTables_info" id="datatable-buttons_info" role="status" aria-live="polite">
                                @Localizer["Showing"] @ViewBag.PageNumber @Localizer["to"] @ViewBag.PageSize @Localizer["of"] @ViewBag.TotalRecords @Localizer["entries"]
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="datatable-buttons_paginate">
                                <ul class="pagination">
                                    @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalRecords / ViewBag.PageSize); i++)
                                    {
                                        <li class="paginate_button page-item @(ViewBag.PageNumber == i ? "active" : "")">
                                            <a class="page-link" href="?pageNumber=@i&pageSize=@ViewBag.PageSize">@i</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteCompany(id) {
            Swal.fire({
                title: '@Localizer["Emin misiniz?"]',
                text: "@Localizer["Bu kaydı silmek istediğinizden emin misiniz?"]",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: '@Localizer["Evet, Sil!"]',
                cancelButtonText: '@Localizer["Hayır, İptal Et"]',
                reverseButtons: true
            }).then(function (result) {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Company")/' + id,
                        type: 'POST',
                        success: function (response) {
                            Swal.fire(
                                '@Localizer["Silindi!"]',
                                '@Localizer["Kayıt başarıyla silindi."]',
                                'success'
                            ).then(() => {
                                window.location.reload();
                            });
                        },
                        error: function () {
                            Swal.fire(
                                '@Localizer["Hata!"]',
                                '@Localizer["Silme işlemi sırasında bir hata oluştu."]',
                                'error'
                            );
                        }
                    });
                }
            });
        }

        function updatePageSize(pageSize) {
            window.location.href = `?pageNumber=1&pageSize=${pageSize}`;
        }
    </script>
}
