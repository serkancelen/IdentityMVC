@model List<TenantDto>

@{
    ViewBag.Title = @Localizer["Şirket Oluştur"];
}

<h2>@Localizer["Şirket Oluştur"]</h2>

<form id="createCompanyForm" asp-action="Create">
    <div class="form-group">
        <label for="Name">@Localizer["Ad"]</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Address">@Localizer["Adres"]</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>
    <div class="form-group">
        <label for="TenantId">@Localizer["Tenant"]</label>
        <select id="TenantId" name="TenantId" class="form-select select2" required data-placeholder="@Localizer["-- Lütfen Tenant Seçiniz --"]">
            <option value=""></option>
            @foreach (var tenant in Model)
            {
                <option value="@tenant.Id">@tenant.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Oluştur"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["İptal"]</a>
</form>
