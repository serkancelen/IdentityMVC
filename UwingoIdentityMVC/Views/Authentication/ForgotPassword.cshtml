@{
    Layout = string.Empty;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Uwingo - @Localizer["Şifre Sıfırlama"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="@Localizer["Şifrenizi sıfırlayın"]" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/uwingoIco.ico">

    <!-- App css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="account-body accountbg">
    <!-- Forgot Password Page -->
    <div class="container">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="row">
                    <div class="col-lg-5 mx-auto">
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-3">
                                    <a href="/" class="logo logo-admin">
                                        <img src="~/images/uwingoLogo.jpg" height="50" alt="logo" class="auth-logo">
                                    </a>
                                    <h4 class="mt-3 mb-1 fw-semibold text-white">@Localizer["Şifre Sıfırlama"]</h4>
                                    <p class="text-muted">@Localizer["Lütfen e-posta adresinizi girin, talimatları göndereceğiz."]</p>
                                </div>
                            </div>
                            <div class="card-body">
                                <form id="forgotPasswordForm" class="form-horizontal auth-form">
                                    <div class="form-group mb-2">
                                        <label class="form-label" for="email">@Localizer["Email"]</label>
                                        <div class="input-group">
                                            <input type="email" class="form-control" id="email" placeholder="@Localizer["Email adresinizi girin"]" required>
                                        </div>
                                    </div>
                                    <div class="form-group mb-0 row">
                                        <div class="col-12 mt-2">
                                            <button class="btn btn-primary w-100 waves-effect waves-light" type="button" id="resetPasswordButton">@Localizer["Şifre Sıfırla"]</button>
                                        </div>
                                    </div>
                                </form>
                                <p class="text-muted mt-3">@Localizer["Hatırladınız mı?"] <a href="/Authentication/Login" class="text-primary">@Localizer["Giriş yapın"]</a></p>
                            </div>
                            <div class="card-body bg-light-alt text-center">
                                <span class="text-muted">© 2024 Uwingo</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Forgot Password Page -->
    <!-- jQuery  -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>

    <!-- AJAX request for ForgotPassword -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('#resetPasswordButton').click(function () {
                var email = $('#email').val();
                if (!email) {
                    alert("@Localizer["Lütfen geçerli bir e-posta adresi girin."]");
                    return;
                }

                // E-posta adresini bir nesne olarak gönderelim
                $.ajax({
                    url: '/Authentication/ForgotPassword',
                    type: 'POST',
                    contentType: 'application/json', // JSON formatında gönderiyoruz
                    data: JSON.stringify({ email: email }), // E-postayı nesne olarak gönderiyoruz
                    success: function (response) {
                        alert(response);
                    },
                    error: function (xhr) {
                        alert("@Localizer["Hata:"] " + xhr.responseText);
                    }
                });
            });
        });
    </script>
</body>

</html>
