                        }
                    </ul>
                </li>
            }

            @if (User.HasClaim(c => c.Type == "Tenant" && c.Value == "GetAllTenants") || User.HasClaim(c => c.Type == "Tenant" && c.Value == "CreateTenant"))
            {
                <li>
                    <a href="javascript: void(0);">
                        <i data-feather="home" class="align-self-center menu-icon"></i>
                        <span>Tenants</span>
                        <span class="menu-arrow"><i class="mdi mdi-chevron-right"></i></span>
                    </a>
                    <ul class="nav-second-level" aria-expanded="false">
                        @if (User.HasClaim(c => c.Type == "Tenant" && c.Value == "GetAllTenants"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Tenant" asp-action="Index"><i class="ti-control-record"></i>View Tenants</a></li>
                        }
                        @if (User.HasClaim(c => c.Type == "Tenant" && c.Value == "CreateTenant"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Tenant" asp-action="Create"><i class="ti-control-record"></i>Add Tenant</a></li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
</div>

